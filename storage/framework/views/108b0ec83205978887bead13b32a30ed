<script>
    $(document).ready(function(){ 
        $.get("<?php echo e(url('admin/staff/getlevel/')); ?>"+"/" + $('#role').val(), function(data) {                        
            $("#level").html(data);
        });            
        $('#role').change(function(){
            $.get("<?php echo e(url('admin/staff/getlevel/')); ?>"+"/" + $(this).val(), function(data) {                        
                $("#level").html(data);
            }); 
        });
    })
</script>
